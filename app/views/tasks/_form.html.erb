<%= form_with(model: task, local: true) do |form| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :titulo %>
    <%= form.text_field :titulo, id: :task_titulo %>
  </div>

  <div class="field">
    <%= form.label :descricao %>
    <%= form.text_area :descricao, id: :task_descricao %>
  </div>

  <div class="field">
    <%= form.label :inicio %>
    <%= form.date_select :inicio, id: :task_inicio %>
  </div>

  <div class="field">
    <%= form.label :previsao %>
    <%= form.date_select :previsao, id: :task_previsao %>
  </div>

  <div class="field">
    <%= form.label :status %>
    <%= collection_select :task, :status_id, @task_status_option, :id, :descricao %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
